<p style="color: green"><%= notice %></p>

<%# <%= render 'shared/backend/header_cars' %>

<div class="container-fluid">
  <h3>Cars List</h3>
  <%= link_to 'Add a New Car', new_user_car_path(@user), :class=>'btn btn-info btn-sm' %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Website</th>
        <th scope="col">Facebook</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cars.each do |car| %>
        <tr>
          <td><%= link_to car.name, user_car_path(@user, car) %></td>
          <td><%= car.description %></td>
          <td><%= car.website %></td>
          <td><%= car.facebook %></td>
          <td>
            <%= link_to 'Show', user_car_path(@user, car), class: 'btn btn-info btn-sm' %>
            <%= link_to 'Edit', edit_user_car_path(user_id: @user.id, id: car.id), class: 'btn btn-primary btn-sm' %>
            <%= button_to 'Delete', [@user, car], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

