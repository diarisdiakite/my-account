<p style="color: green"><%= notice %></p>

<h1>Expenses</h1>

<div id="expenses">
  <% @categories.each do |category| %>
    <h2><%= category.name %></h2>
    <% category.expenses.each do |expense| %>
      <%= render partial: 'expense', locals: { expense: expense } %>
      <p>
        <%= link_to "Show this expense", user_category_expense_path(@user, @category, expense) %>
      </p>
    <% end %>
  <% end %>
</div>
