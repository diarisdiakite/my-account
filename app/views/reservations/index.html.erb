<p style="color: green"><%= notice %></p>

<div class="container-fluid">

  <%= render 'shared/backend/header_cars' %>
  <h2>Reservations</h2>

  <% @cars.each do |car| %>
    <div class="mt-3">
      <h3><%= car.name %></h3>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Reservation ID</th>
            <th scope="col">Reservation Date</th>
            <th scope="col">Reservation Client</th>
            <th scope="col">Total Amount</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% car.reservations.each do |reservation| %>
            <tr>
              <td><%= reservation.id %></td>
              <td><%= reservation.created_at %></td>
              <td><%= reservation.user.name %></td>
              <td><%= reservation.total_amount_payable %></td>
              <td>
                <%= link_to 'Show', user_car_reservation_path(@user, car, reservation), class: 'btn btn-info btn-sm' %>
                <%= link_to 'Edit', edit_user_car_reservation_path(@user, car, reservation), class: 'btn btn-primary btn-sm' %>
                <%= button_to 'Delete', [@user, car, reservation], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
